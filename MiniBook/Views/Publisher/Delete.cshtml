@model MiniBook.Models.NXB

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Xóa nhà xuất bản</h2>

<h3>Bạn có chắc muốn xóa nahf xuất bản này này?</h3>
<hr />
<div>
    <div class="">
        <div class="row">
            <div class="col-md-3 row-title">
                Tên NXB:
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.TenNXB)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 row-title">
                SDT:
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.SDT)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 row-title">
                Mail:
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.Mail)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 row-title">
                Địa chỉ:
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.DiaChi)
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align:center; padding-top: 20px">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    }
</div>
