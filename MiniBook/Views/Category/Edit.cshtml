@model MiniBook.Models.THELOAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Chỉnh sửa thể loại</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTheLoai)

        <div class="form-group">
            Tên thể loại:
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color" style="text-align:center; padding-top: 20px">
            <input type="submit" value="Lưu" class="btn btn-success" /> | 
            @Html.ActionLink("Trở về", "Index" ,null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
}


