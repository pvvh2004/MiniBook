@model IEnumerable<MiniBook.Models.THELOAI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Danh sách thể loại</h2>
<hr />
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table .table-striped">
    <tr>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.IDTheLoai },new { @class = "btn btn-outline-warning" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDTheLoai }, new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDTheLoai }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
