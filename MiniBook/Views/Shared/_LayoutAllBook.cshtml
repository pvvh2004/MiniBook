<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container" style="background-color: #fcfcf3">
        <nav class="navbar navbar-expand-lg " >
            <div class="container-fluid">
                <a class="navbar-brand" href="~/MBook/index">
                    <img src="~/Images/Logo.png" alt="Logo" width="130" height="24" class="d-inline-block align-text-top">
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liên hệ</a>
                        </li>
                        @if (@Session["CusName"] == null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                    Tài khoản
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Login","Customer")">Đăng nhập</a>
                                    <a class="dropdown-item" href="@Url.Action("Register","Customer")">Đăng kí</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                                    @Session["CusName"]
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("LichSuDonHang", "DONHANGs",new { id = Session["IDCus"]})">Lịch sử mua hàng</a>
                                    <a class="dropdown-item" href="~/Customer/Logout">Đăng xuất</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <div class="navbar-brand">
                        @Html.Action("GioHangPartial", "GioHang")
                    </div>
                    <form class="d-flex" action="~/MBook/AllBook" role="search">
                        <input class="form-control me-2" type="search" name="searchString" placeholder="Nhập tên sách" aria-label="searchString">
                        <button class="btn btn-outline-success" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
        </nav>
        <hr />
        <div style="background-color: #fcfcf3">
            <div class="col-12">
                @Html.Action("GetCategories", "MBook")
                @RenderBody()
            </div>
        </div>
        <div style="text-align: center; background-color: #fcfcf3; padding-top: 30px; font-weight: 500; font-size: 20px; padding-bottom: 30px; " class="footer">
            <span>Copyright © 2023 MiniBook</span>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
