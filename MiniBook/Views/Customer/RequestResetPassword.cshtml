@{
    ViewBag.Title = "Request Reset Password";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Request Reset Password</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Yêu Cầu Reset Mật Khẩu</h2>
                @using (Html.BeginForm("RequestResetPassword", "Customer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Yêu Cầu Reset</button>
                }

                <div class="text-center mt-3">
                    <span>@ViewBag.Message</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
