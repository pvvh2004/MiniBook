@model IEnumerable<MiniBook.Models.TACGIA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Danh sách tác giả</h2>
<hr />
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table .table-striped">
    <tr>
        <th>
            Tên tác giả
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Mail
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.IDTG }, new { @class = "btn btn-outline-warning" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDTG }, new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDTG }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
