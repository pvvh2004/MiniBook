@using MiniBook.Models
@model List<MatHangMua>
@{
    ViewBag.Title = "HienThiGioHang";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Giỏ hàng - @ViewBag.TongSL</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var sach in Model)
                        {
                                <div class="card rounded-3 mb-4">
                                    <div class="card-body p-4">
                                        <div class="row d-flex justify-content-between align-items-center">
                                            <div class="col-md-2 col-lg-2 col-xl-3">
                                                <img src="~/Images/@sach.AnhMinhHoa"
                                                     class="img-fluid rounded-3" alt="Cotton T-shirt">
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-8">
                                                <a style="text-decoration: none;font-size:20px" class="" href="~/MBook/Details/@sach.IDSach">@sach.TenSach</a>
                                            </div>
                                            @using (Html.BeginForm("CapNhatMatHang", "GioHang", new { IDSach = sach.IDSach }))
                                            {
                                                <div style="padding-top: 10px; padding-left: 2%" class="row d-flex justify-content-xl-between align-items-center">
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <p class="mb-sm-auto">Số lượng: </p>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <input type="number" min="1" value="@sach.SoLuong" name="SoLuong" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-4 d-flex">
                                                        <button type="submit" class="btn btn-primary btn-sm">Cập nhật</button>
                                                        |
                                                        @Html.ActionLink("Xóa", "XoaMatHang", "GioHang", new { IDSach = sach.IDSach }, new { @class = "btn btn-danger btn-sm" })

                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-3 offset-lg-1">
                                                        <h5 class="mb-sm-auto">@string.Format("{0:#,##0}", @sach.ThanhTien()) vnđ</h5>
                                                    </div>
                                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                        <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                                    </div>
                                                </div>
                                                    }
                                                </div>

                                            </div>
                                </div>

                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Tiền hàng
                                <span>@string.Format("{0:#,##0}", @ViewBag.TongTien) vnđ</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Chi phí vận chuyển
                                <span>Miên phí</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng tiền</strong>
                                </div>
                                <span><strong>@string.Format("{0:#,##0}", @ViewBag.TongTien) vnđ</strong></span>
                            </li>
                        </ul>
                        @Html.ActionLink("ĐẶT HÀNG", "DatHang", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>