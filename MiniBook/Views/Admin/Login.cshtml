
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        
        <section class="vh-100" style="background-color: #F0FFF0;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <h3 class="mb-5  text-center">Đăng nhập</h3>
                                <div class="form-outline mb-4">
                                    <label class="form-label text-start">Tên đăng nhập</label>
                                    <input name="TenTaiKhoan" type="text" id="typeEmailX-2" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label text-start">Mật khẩu</label>
                                    <input name="MatKhau" type="password" id="typePasswordX-2" class="form-control form-control-lg" required />
                                </div>
                                <div class="justify-content-center  text-center">
                                    <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
                                </div>
                                <h4 style="color:orangered" class="justify-content-center  text-center">@ViewBag.ThongBao</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

</body>
</html>
